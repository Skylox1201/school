{% extends 'base.html.twig' %}

{% block title %}{{ 'EditionMatiere'|trans }}{% endblock %}

{% block body %}
<div class="container my-3">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">{{ 'EditionMatiere'|trans }}</h1>
        </div>
        <div class="col-12 m-auto" style="max-width:340px;">
            {{ form_start(form) }}
            <div class="m-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'value': matiere.name} }) }}
            </div>
            <div class="m-3">
                {{ form_label(form.coefficient) }}
                {{ form_widget(form.coefficient, { 'attr': {'class': 'form-control', 'value': matiere.coefficient} }) }}
            </div>
            <div class="input-group m-3">
                <input type="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
                <a href="{{ path('app_matiere') }}" class="btn btn-secondary">{{ 'Back'|trans }}</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}